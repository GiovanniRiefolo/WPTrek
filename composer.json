{
  "name": "wptrek",
  "type": "wordpress-theme",
  "description": "The unconventional WordPress starter theme for non-of-this-earth projects.",
  "keywords": [
    "WordPress", "Themes"],
  "homepage": "https://github.com/GiovanniRiefolo/WPTrek",
  "license": "GNU-GPL-v3.0",
  "authors": [{
    "name": "Giovanni Riefolo",
    "homepage": "https://riefolo.dev"
    }
  ],
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2 || ^0.7.0",
    "wp-coding-standards/wpcs": "~2.3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1.0",
    "phpunit/phpunit": "^7.5"
  },
  "scripts": {
    "compat": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=phpcompat.xml.dist --report=summary,source",
    "format": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --report=summary,source",
    "lint": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --report=summary,source",
    "lint:errors": "@lint -n",
    "test": "@php ./vendor/phpunit/phpunit/phpunit"
  },
  "support": {
    "issues": "https://github.com/GiovanniRiefolo/WPTrek/issues"
  }
}